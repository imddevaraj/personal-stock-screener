# Database Configuration
POSTGRES_USER=stockscreener
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=stockscreener_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Application Settings
APP_NAME=Personal Stock Screener
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# JWT & Security
SECRET_KEY=change_me_to_a_random_string_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data Source API Keys
# NSE/BSE or Yahoo Finance
MARKET_DATA_API_KEY=your_market_data_api_key_here
MARKET_DATA_BASE_URL=https://api.example.com

# News API
NEWS_API_KEY=your_news_api_key_here
NEWS_API_BASE_URL=https://newsapi.org/v2

# Alternative: Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# Scoring Configuration (weights 0-1, must sum to 1)
FUNDAMENTAL_WEIGHT=0.6
SENTIMENT_WEIGHT=0.4

# Fundamental Scoring Thresholds
PE_RATIO_EXCELLENT=15
PE_RATIO_GOOD=25
PB_RATIO_EXCELLENT=2
PB_RATIO_GOOD=3
ROE_EXCELLENT=20
ROE_GOOD=15
DEBT_TO_EQUITY_EXCELLENT=0.5
DEBT_TO_EQUITY_GOOD=1.0

# Sentiment Analysis
SENTIMENT_MODEL=ProsusAI/finbert
SENTIMENT_CONFIDENCE_THRESHOLD=0.7

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_ALWAYS_EAGER=false

# Ingestion Schedule (Cron format)
FUNDAMENTAL_INGESTION_CRON=0 17 * * 1-5  # Daily at 5 PM IST (weekdays)
NEWS_INGESTION_CRON=0 */2 * * *          # Every 2 hours
SCORING_CRON=0 18 * * 1-5                # Daily at 6 PM IST (weekdays)

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Stock Universe (comma-separated symbols)
TRACKED_STOCKS=RELIANCE,TCS,INFY,HDFCBANK,ICICIBANK,BHARTIARTL,ITC,SBIN,LT,HINDUNILVR
